# .env.example
# Copy this file to .env and fill in your actual credentials

# MT5 Configuration (Optional - Leave empty to use existing MT5 terminal)
# If you want to use existing MT5 terminal that's already logged in,
# just leave these empty or comment them out
MT5_LOGIN=
MT5_PASSWORD=
MT5_SERVER=

# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Telegram Configuration (Optional)
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_CHAT_ID=-1001234567890

# Trading Configuration
MAX_RISK_PER_TRADE=0.01
MAX_DAILY_LOSS=0.03
MAX_WEEKLY_LOSS=0.05
MAX_OPEN_TRADES=5

# News Filter Configuration
USE_NEWS_FILTER=true
NEWS_AVOIDANCE_MINUTES_BEFORE=30
NEWS_AVOIDANCE_MINUTES_AFTER=30

# Trading Sessions (Bangkok Time GMT+7)
ASIAN_SESSION_START=7
ASIAN_SESSION_END=16
EUROPEAN_SESSION_START=14
EUROPEAN_SESSION_END=23
US_SESSION_START=20
US_SESSION_END=5

# Check Intervals (seconds)
MARKET_CHECK_INTERVAL=300
NEWS_CHECK_INTERVAL=1800

# Symbols to Trade (comma separated)
ENABLED_SYMBOLS=EURUSD,GBPUSD,USDJPY,XAUUSD,AUDUSD

# Debug Mode
DEBUG_MODE=false
LOG_LEVEL=INFO